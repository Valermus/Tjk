<Window x:Class="TjkDesktop.LoadingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadingScreen" Height="102" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <ProgressBar Value="{Binding NumRecsLoaded}" Maximum="{Binding TotalNumRecs}"
                 Height="15" Margin="15,15,15,0"/>
        <Label Content="{Binding RecsLoadedMessage}"
           Margin="10,0"/>
    </StackPanel>
</Window>
